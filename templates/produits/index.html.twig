{% extends 'base.html.twig' %}

{% block title %}Ajout de Produit{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="container">
    <h1>Ajouter un Produit</h1>
    {{ form_start(formProduit) }}
    <p>{{ form_row(formProduit.nomproduits) }}</p>
    <p>{{ form_row(formProduit.description) }}</p>
    <p>{{ form_row(formProduit.prix) }}</p>
    <p>{{ form_row(formProduit.quantity) }}</p>
    <p>{{ form_row(formProduit.dateajout) }}</p>
    <p>{{ form_row(formProduit.idCategories) }}</p>
    <button type="submit">Ajouter</button>
    {{ form_end(formProduit) }}
</div>
{% endblock %}
