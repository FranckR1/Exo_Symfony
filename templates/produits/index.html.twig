{% extends 'base.html.twig' %}

{% block title %}Ajout de Produit{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="container">
    <h1>Ajouter un Produit</h1>

    {{ form_start(formProduit) }}
    {{ form_row(formProduit.nom_produits) }}
    {{ form_row(formProduit.description) }}
    {{ form_row(formProduit.prix) }}
    {{ form_row(formProduit.quantity) }}
    {{ form_row(formProduit.date_ajout) }}
    {{ form_end(formProduit) }}
    <button type="submit">Ajouter</button>

</div>
{% endblock %}
